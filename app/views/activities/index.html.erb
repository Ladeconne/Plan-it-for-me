<h1>Choose an acitivity</h1>

<hr>

<form action="/your_trip" method="get" class="search">
  <% @activities.values.each do |category| %>
    <% category.each do |activity| %>
      <input type="checkbox" name="search[<%= activity.id %>]" value="<%= activity.name %>">
      <label for="<%= activity.name %>"> <%= activity.name %></label><br>
    <% end %>
  <% end %>
  <input type="submit" value="Submit">
</form>
