<h1><%#= @day_activities.length %> days in <%= @city %></h1>

<div class="container">
  <div>
    <p><%#= @day_activities.first[:day] %> to <%#= @day_activities.last[:day] %></p>
  <% @result.each do |t| %>
    <ul>
      <li>
        <%= t[:day] %>
        <div>
          <% t[:activities].each do |act| %>
            <%= act.name %> |
          <% end %>
        </div>
      </li>
    </ul>
  <% end %>

    <h2><%= @city %></h2>
  </div>


  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

  </div>
</div>
