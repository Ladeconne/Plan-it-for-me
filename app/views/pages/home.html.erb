<div id="home">
<div class="container">
<%# Introduction Line %>
  <div class="header">
    <h2>We build customised trip itineraries based on your preferred <u>city</u>, duration, and interests! </h2>
    <h1>Plan your trip with us:</h1>
  </div>
  <div class="content">
    <div class="form">
        <h2>Itinerary Planner</h2>
        <%= render 'search_form' %>
    </div>
    <div class="picture">
      <div class="ml-2 row align-items-center justify-content-center">
        <div class="col-2 text-left">
          <i class="chevron picture fas fa-chevron-left"></i>
        </div>
        <div class="col-8">
          <div class="picture-card align-items-center">
          <p>Bali, Indonesia</p>
          <%= image_tag "bali.jpg", class: 'picture-card-img' %>           
          </div>
        </div>
        <div class="col-2 text-right">
          <i class="chevron fas fa-chevron-right"></i>
        </div>
      </div>
    </div>
  </div>
  </div>
  <%= image_tag 'banner-content-1.png', class: "banner-image" %>
  
</div>

