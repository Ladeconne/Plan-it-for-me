<h1>Trip history</h1>
<div>
  <% if @trips.empty? %>
    <p>Uh-oh! There' s no trip yet!</p>
  <% end %>

  <div class="row justify-content-center">
    <% @trips.each do |trip| %>
        <div class="col-lg-3 col-md-6 col-xs-12 d-flex align-items-center flex-column card m-3">
          <h2><%= trip.city %></h2>
          <div class="card-content">
            <%= link_to trip_path(trip) do %>
              <%= image_tag "https://source.unsplash.com/400x300/?#{trip.city}" %>
            <% end %>
            <div class="info-card d-flex justify-content-between align-items-center">
              <p><%= trip.start_date %> - <%= trip.end_date %></p>
              <i class="fas fa-heart"></i>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
