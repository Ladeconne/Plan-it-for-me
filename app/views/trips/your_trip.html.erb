

<div class="container">
<div class="mb-1 mx-auto">
      <%= image_tag "cat3.svg", class: "progress-icon progress-c" %>
    </div>
    <div class="row mb-4 align-items-center">
      <div class="col-1">
        <%= link_to "#" do %>
          <i class="chevron fas fa-chevron-left"></i>
        <% end %>
      </div>
      <div class="col-10">
        <div class="progress_bar">

          <div class="progress">
            <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
        </div>
      </div>
      <div class="col-1">
        <%= link_to "#" do %>
          <i class="chevron fas fa-chevron-right"></i>
        <% end %>
      </div>
    </div>
</div>



<div class="container my-5">

  <div class="row">

    <div class="col-md-6 col-sm-12 ">
      <h2><%= @result.length %> days in <%= @city %></h2>
      <p><%#= @day_activities.first[:day] %>  <%#= @day_activities.last[:day] %></p>
    <% @result.each do |t| %>
      <ul>
        <li>
          <%= t[:day].date %>
          <div>
            <% t[:activities].each do |act| %>
              <%= act.name %> |
            <% end %>
          </div>
        </li>
      </ul>

    <% end %>
    <% if !user_signed_in? %>
      <%= link_to 'Save', new_user_registration_path, class: 'btn btn-info' %>
    <% end %>

  </div>

    <div class="col-md-6 col-sm-12 ">
       <h2><%= @city %></h2>
       <div id="map"
         class="card-content"
         style="width: 100%; height: 600px;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
       </div>
    </div>

  </div>

</div>

</div>
