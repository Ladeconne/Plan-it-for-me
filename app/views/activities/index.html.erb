
<h1>Choose an acitivity</h1>

<div class="container">
  <div class="mb-1">
    <%= image_tag "cat2.svg", class: "progress-b" %>
  </div>

  <div class="progress">
    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 66%" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
</div>

<% @activities %>

<form action="/your_trip" method="get" class="search">
  <% @activities.values.each do |category| %>
    <% category.each do |activity| %>
      <input type="checkbox" name="search[<%= activity.id %>]" value="<%= activity.name %>">
      <label for="<%= activity.name %>"> <%= activity.name %></label><br>
    <% end %>
  <% end %>
  <input type="submit" value="Submit">
</form>
