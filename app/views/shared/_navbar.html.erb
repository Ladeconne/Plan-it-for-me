<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="d-flex align-items-baseline">
    <%= link_to :root, class: "navbar-brand" do %>
      <div class="d-flex align-items-baseline">
        <%= image_tag "cat.svg" %>
        <h1 class="m-0">PLAN IT FOR ME</h1>
      </div>
    <% end %>
    <%= link_to "About", "#", class: "nav-link" %>
    <% if user_signed_in?  %>
      <%= link_to "Saved Trips", trips_path, class: "nav-link" %>
    <% end %>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= image_tag "Avatar.png", id: "navbarDropdown", data: {toggle: "dropdown"}, aria: {haspopup: "true"}, aria: {expanded: "false"}, class: "avatar dropdown toggle" %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item dropdown">
            <%= link_to "Log In", new_user_session_path, class: "dropdown-item" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "dropdown-item" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
